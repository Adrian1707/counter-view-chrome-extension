{
  "manifest_version": 3,
  "name": "Counter View",
  "version": "1.0",
  "description": "Get a counter view of an article using an LLM.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://api.openai.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.css",
        "showdown.min.js",
        "Readability.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}